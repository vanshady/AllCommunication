doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //- meta(name='ct', content='<%= ct %>')
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
    title SpeechHacks
    link(href='css/watson-bootstrap-style.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
  body
    .container
      .row
        .col-lg-12.col-md-12.col-sm-12
          h2 AllCommunications
        .row
          .col-lg-12.col-md-12.col-sm-12
            .audioParent
              audio.audio(style='display:none', controls='')
                | Your browser does not support the audio element.
        .row
          nav.navbar.navbar-inverse(style='width:100%')
            ul.navbar-text
              li#recordButton.button-row.nav-inverse-color(style='width:20%', onclick='updateTimeCount()')
                img#microphoneIcon.icon(src='images/microphone.svg')
                span.nav-label Record Audio
        .row(style='  margin: 0;')
          .col-lg-12.col-md-12.col-sm-12(style='padding: 0;')
            .well
              form.form-horizontal(autocomplete='off')
                div(role='tabpanel')
                  .hr-tab
                  fieldset
                    .row.error-row
                      .col-lg-12
                        #errorAlert
                          span#errorMessage
                          a#errorClose.pull-right(href='#') ×
                    .row.notification-row
                      .col-lg-12
                        #notificationAlert
                          span#notificationMessage
                          a#notificationClose.pull-right(href='#') ×
                    .form-group.row.tabpanel-row
                      .col-lg-12
                        .tab-content
                          #home2.tab-pane.active(role='tabpanel')
                            textarea#resultsText(readonly='', name='resultsText')
                          #profile2.tab-pane(role='tabpanel')
                            textarea#resultsJSON(readonly='')
                          .text-right.timeCountFootnote
                            span.timeCount.small
                            span.small
        .row
          .col-md-12
            .panel.panel-default
              .panel-heading(style='display:none')
                h3 Metadata
                span.pull-right.clickable
                  i.caret-up(style='  margin-top: -1.3em;')
              .panel-body
                .table-scroll(style='display:none')
                  table#metadataTable
                    thead
                      tr.table-header-row
                        th WORD
                        th START TIME(sec)
                        th END TIME(sec)
                        th CONFIDENCE
                    tbody#metadataTableBody
        script(src="https://code.jquery.com/jquery-1.11.3.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
        script(src="js/index.js")

        script(type="text/javascript").
          var counterr = 0;

          function updateTimeCount() {
            counterr = counterr + 1;

            for (var i = 1; i < 99999; i++)
              window.clearInterval(i);
            var duration = 0;
            var timer = duration,
              minutes, seconds;
            if (counterr % 2) {
              setInterval(function() {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                $('.timeCount').text(minutes + ":" + seconds);

                if (++timer < 0) {
                  timer = duration;
                }
              }, 1000);
            }
          }
